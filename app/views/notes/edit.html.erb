<h1>ノート編集ページ</h1>

<%= form_with model: @note do |f| %>
  <p>
      <%= f.label :title, 'タイトル：' %>
      <%= f.text_field :title %>
  </p>
  <p>
      <%= f.label :images, '手描きノートの写真(複数選択可)' %>
      <%= f.file_field :images, multiple: ture,  accept: 'image/jpeg,image/gif,image/png' %>
  </p>
  <p>
      <%= f.label :content, '本文：' %>
      <%= f.rich_text_area :content %>
  </p>
  
  <%= f.submit '変更' %>
<% end %>
<%= link_to 'キャンセル', notes_path %>