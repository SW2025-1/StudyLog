<h1>ログイン</h1>
<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>

<%= form_with url: login_path , method: :post, local: true do |f| %>
  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
  <%= f.submit 'ログイン' %>
<% end %>
<br>
<%= link_to "アカウント登録", new_user_path %>
<!-- TODO: ログインのキャンセル時は開発段階ではroot_path（=top#main）にしているが、完成時には適切にページ遷移先を設定する-->
<%= link_to "キャンセル", root_path %> 